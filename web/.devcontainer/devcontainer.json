{
    "name": "Node",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
    "customizations": {
        "vscode": {
            "extensions": [
                "mutantdino.resourcemonitor",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "csstools.postcss",
                "bradlc.vscode-tailwindcss",
                "mhutchie.git-graph"
            ]
        }
    },
    "postCreateCommand": "npm install",
    "forwardPorts": [
        3000
    ],
    "remoteUser": "node"
}